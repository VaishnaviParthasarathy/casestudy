package productDetail.service;

import java.util.HashMap;
import java.util.Map;

import productDetail.ProductDetailResource;
import productDetail.model.ProductDescription;

public class ProductDetailService {
	
	Map<String,ProductDescription> productDescriptionMap=new HashMap<String, ProductDescription>();
	
	public ProductDetailService(){
		ProductDescription p1=new ProductDescription("Animation","Jungle Book");
		ProductDescription p2=new ProductDescription("Science Fiction","Inception");
		ProductDescription p3=new ProductDescription("Animation","Beauty and the Beast");
		ProductDescription p4=new ProductDescription("Animation","The Big Lebowski (Blu-ray) (Widescreen)");
		productDescriptionMap.put("15117729", p1);
		productDescriptionMap.put("16483589", p2);
		productDescriptionMap.put("16752456", p3);
		productDescriptionMap.put("13860428", p4);
		
	}

	public ProductDescription getProductDetails(String id) {
		// TODO Auto-generated method stub
		return productDescriptionMap.get(id);
	}

}
