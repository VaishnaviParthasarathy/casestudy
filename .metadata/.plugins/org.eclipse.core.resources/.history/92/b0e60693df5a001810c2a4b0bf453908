package com.target.myRetail.ProductItem;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

import com.target.ProductDetails.ProductDetails;

@RestController
@RequestMapping(value="/productDetails")
public class ProductDetailController {
	
	@GetMapping(value="/{id}")
	public String getProductNameById(@PathVariable("id")String id) {
		
		
		 RestTemplate restTemplate = new RestTemplate();
		
		 ProductDetails productDetail = restTemplate.getForObject("https://redsky.target.com/v2/pdp/tcin/{id}?excludes=taxonomy,price,promotion,bulk_ship,rating_and_review_reviews,rating_and_review_statistics,question_answer_statistics", 
				 ProductDetails.class,id);
		 
		 if(productDetail!=null){
			 return productDetail.getProduct().getItem().getProductDescription().getTitle();
		 }
		 return "no name found";
	        
	}

}
