package productDetail;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import productDetail.model.ProductDescription;
import productDetail.service.ProductDetailService;

@Path("/productDetails")
public class ProductDetailResource {
	
	
	ProductDetailService service;
	
	@GET
    @Path("/{productId}")
    @Produces(MediaType.APPLICATION_JSON)
    public ProductDescription getProduct(@PathParam("productId") String id){
		System.out.println("hello");
    	System.out.println(id);
    	return service.getProductDetails(id);
    }

}
